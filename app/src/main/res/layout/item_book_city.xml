<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/selector_common_bg"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/nb.padding.large"
    android:paddingRight="@dimen/nb.padding.large">

    <ImageView
        android:id="@+id/bookcity_item_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_section_comment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/bookcity_item_iv_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bookcity_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bookcity_item_iv_icon"
            android:text="红袖添香"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bookcity_item_tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://www.baidu.com"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_enter"
        android:textColor="@color/black" />
</RelativeLayout>